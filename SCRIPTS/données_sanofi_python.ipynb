import requests
import pandas as pd
from datetime import datetime

# -----------------------------
# Paramètres
# -----------------------------
SPONSOR = "Sanofi"
START_YEAR = 2019
END_YEAR = 2024

BASE_URL = "https://clinicaltrials.gov/api/query/study_fields"

FIELDS = [
    "NCTId",
    "SponsorName",
    "OverallStatus",
    "PrimaryCompletionDate"
]

# -----------------------------
# Récupération des données
# -----------------------------
params = {
    "expr": f"{SPONSOR}[Sponsor]",
    "fields": ",".join(FIELDS),
    "min_rnk": 1,
    "max_rnk": 1000,  # suffisant pour Sanofi
    "fmt": "json"
}

response = requests.get(BASE_URL, params=params)
data = response.json()

studies = data["StudyFieldsResponse"]["StudyFields"]

# -----------------------------
# Nettoyage & structuration
# -----------------------------
rows = []

for study in studies:
    status = study["OverallStatus"][0] if study["OverallStatus"] else "Unknown"
    date_str = study["PrimaryCompletionDate"][0] if study["PrimaryCompletionDate"] else None

    if date_str:
        try:
            year = datetime.strptime(date_str, "%B %Y").year
        except ValueError:
            continue

        if START_YEAR <= year <= END_YEAR:
            rows.append({
                "Year": year,
                "Status": status
            })

df = pd.DataFrame(rows)

# -----------------------------
# Agrégation par année et statut
# -----------------------------
summary = (
    df.groupby(["Year", "Status"])
    .size()
    .unstack(fill_value=0)
    .sort_index()
)

# -----------------------------
# Sauvegarde
# -----------------------------
summary.to_csv("sanofi_trials_2019_2024_by_status.csv")

print("Tableau final :")
print(summary)
